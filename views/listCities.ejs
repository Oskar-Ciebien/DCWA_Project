<!-- CSS Style -->
<style>
    /* Adding Style to table, th and td */
    table,
    th,
    td {
        padding: 5px;
        border: 1px solid black;
    }
</style>

<!-- Page Heading -->
<h1>Cities</h1>

<!-- Table printing details from MySQL Database - geography.sql -->
<table>
    <!-- Table Row with Headings -->
    <tr>
        <th>City Code</th>
        <th>Country Code</th>
        <th>City Name</th>
        <th>Population</th>
        <th>By the Sea</th>
        <th>Area</th>
    </tr>
<% cities.forEach((city) => { %>
    <!-- Table Row printing out the items from database, and additional buttons -->
    <tr>
        <td><%= city.cty_code %></td>
        <td><%= city.co_code %></td>
        <td><%= city.cty_name %></td>
        <td><%= city.population %></td>
        <td><%= city.isCoastal %></td>
        <td><%= city.areaKM %></td>
        <td><a href="/cityDetails/<%= city.cty_code %>">All Details</a></td>
    </tr>
<% }) %>
</table>

<!-- Button redirecting to Home Page -->
<a href="/">Home</a>